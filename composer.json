{
    "name": "php-libra/php-libra",
    "type": "library",
    "description": "A php library to work with the Libra client gRPC and protobuf.",
    "keywords": [
        "libra",
        "cryptos",
        "grpc"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yada Khov",
            "email": "ykhov@conntected.io",
            "homepage": "https://github.com/connected-ykhov"
        }
    ],
    "require": {
        "grpc/grpc": "^1.22",
        "google/protobuf": "^3.8",
        "google/flatbuffers": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "files": [
            "src/PhpLibra/helpers.php"
        ]
    }
}
